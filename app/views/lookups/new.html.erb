<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-info" %>
<% end %>

<%= render 'form' %>

<script>
  // TODO: fix back button on isCustom thing!
$(document).ready(function() {
    var $tokenField = $('.token-field')
    var $mode = $('#mode')

    if($mode.find('option:selected').text() == "Custom"){
        $tokenField.removeClass('display-none');
    }

    $mode.change(function(){
        var isCustom = $(this).find('option:selected').text() == "Custom";
        $tokenField.toggleClass('display-none', !isCustom);
    });
});
</script>